extends layout

block content
  .lead.text-center
    if orderType == 'create'
      .text-primary
        i.fa.fa-cutlery
        |  Create
    else
      .text-success
        i.fa.fa-usd
        |  Sell
  h4
    i.fa.fa-coffee
    |  Coffeed Store
  for store in stores
    .radio
      label
        input(type='radio', name='location', value='#{store}')
        = store
  br
  h4
    i.fa.fa-edit
    |  Order Items
  table.table.table-striped.table-bordered
    thead
        tr
          th Name
          th Quantity
      tbody
        for item in items[orderType]
          tr
            td= item
            td.col-xs-2
              input.form-control.input-sm.quantity(type='text', value=0, name='#{item}')
  button.btn.btn-lg.btn-success(id='placeOrder', data-order-type='#{orderType}')
    i.fa.fa-shopping-cart
    |  Place Order