extends layout

block content
  for location in locations
    .alert.alert-info
      h4= location
    for order in orders
      if order.location == location
        .well
          ul.no-style
              for item in order.items
                li #{item.name}: #{item.quantity}
          button.btn.btn-small.btn-danger Cancel Order
          
        

