extends layout

block content
  h2.page-header Sign Up
  form.well(action='/signup', method='POST')
    label First Name
    input.span3(type='text', name='firstname')
    label Last Name
    input.span3(type='text', name='lastname')
    label Email Address
    input.span3(type='email', name='email')
    label Username
    input.span3(type='text', name='username')
    label Password
    input.span3(type='password', name='password')
    p
      input.btn.btn-primary(type='submit', value='Sign up')